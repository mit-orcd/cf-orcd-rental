# =============================================================================
# Plugin Configuration
# =============================================================================

INSTALLED_APPS += ['coldfront_orcd_direct_charge']

# =============================================================================
# Auto-Configuration Features
# =============================================================================

# Automatically set all users as PIs (allows project creation)
AUTO_PI_ENABLE = True

# Automatically create personal and group projects for each user
AUTO_DEFAULT_PROJECT_ENABLE = True

# =============================================================================
# Center Branding
# =============================================================================

CENTER_NAME = 'MIT ORCD Rental Services'

# =============================================================================
# API Configuration
# =============================================================================

# Enable the REST API
PLUGIN_API = True

# =============================================================================
# UI Configuration
# =============================================================================

# Hide Center Summary from navigation (plugin overrides this)
CENTER_SUMMARY_ENABLE = False

# Hide allocations section from home page (uses rental system instead)
HOME_PAGE_ALLOCATIONS_ENABLE = False

